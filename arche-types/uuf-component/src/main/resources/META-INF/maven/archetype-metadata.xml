<archetype-descriptor name="${ComponentName}">
    <requiredProperties>
        <requiredProperty key="groupId">
            <defaultValue>org.wso2.carbon.uuf.sample</defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>org.wso2.carbon.uuf.sample.hello-world</defaultValue>
        </requiredProperty>
        <requiredProperty key="version">
            <defaultValue>1.0.0-SNAPSHOT</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>org.wso2.carbon.uuf.sample.hello-world</defaultValue>
        </requiredProperty>
        <requiredProperty key="ComponentName">
            <defaultValue>Hello World Component</defaultValue>
        </requiredProperty>
    </requiredProperties>
    <fileSets>
        <fileSet filtered="false" encoding="UTF-8">
            <directory>src/main</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>*.xml</include>
                <include>*.yaml</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>